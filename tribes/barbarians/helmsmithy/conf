[global]
size=big
output=helm
output=mask
output=warhelmet

[aihints]
build_material=false

[buildcost]
trunk=3
blackwood=1
raw_stone=2
grout=2
thatchreed=3

[working positions]
helmsmith=1

[inputs]
iron=8
gold=8
coal=8

[programs]
produce_helm=_Produce helm
produce_mask=_Produce mask
produce_warhelmet=_Produce warhelmet
work=_Work

[produce_helm]
return=skipped unless economy needs helm
consume=coal iron
sleep=32000
animate=working 35000
produce=helm

[produce_mask]
return=skipped unless economy needs mask
consume=coal iron:2
sleep=32000
animate=working 45000
produce=mask

[produce_warhelmet]
return=skipped unless economy needs warhelmet
consume=coal gold iron:2
sleep=32000
animate=working 55000
produce=warhelmet

[work]
call=produce_helm
call=produce_mask
call=produce_warhelmet
sleep=20000
return=skipped

[idle]
pics=helmsmithy_i_??.png  # ???
hotspot=65 83

[build]
pics=helmsmithy_b_??.png  # ???
hotspot=65 83

[unoccupied]
pics=helmsmithy_u_??.png  # ???
hotspot=65 83

[working]
pics=helmsmithy_w_??.png  # ???
hotspot=65 83
fps=20
