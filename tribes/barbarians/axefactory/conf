[global]
soundfx=../../../sound/smiths/smith
soundfx=../../../sound/smiths/sharpening
size=medium
buildable=no
output=axe
output=sharpaxe
output=broadaxe
enhanced_building=yes
enhancement=warmill

[aihints]
build_material=false

[buildcost]
trunk=1
blackwood=1
raw_stone=2
grout=1
thatchreed=1

[working positions]
blacksmith=1

[inputs]
iron=8
coal=8

[programs]
produce_axe=_Produce axe
produce_sharpaxe=_Produce sharpaxe
produce_broadaxe=_Produce broadaxe
work=_Work

[produce_axe]
return=skipped unless economy needs axe
consume=coal iron
sleep=32000
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=axe

[produce_sharpaxe]
return=skipped unless economy needs sharpaxe
consume=coal iron:2
sleep=32000
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=sharpaxe

[produce_broadaxe]
return=skipped unless economy needs broadaxe
consume=coal:2 iron:2
sleep=32000
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=broadaxe

[work]
call=produce_axe
call=produce_sharpaxe
call=produce_broadaxe
return=skipped

