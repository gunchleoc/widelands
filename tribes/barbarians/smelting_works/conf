[global]
size=medium
output=iron
output=gold

[aihints]
build_material=false

[buildcost]
trunk=3
blackwood=1
raw_stone=1
grout=1
thatchreed=2

[working positions]
smelter=1

[inputs]
ironore=8
goldstone=8
coal=8

[programs]
smelt_iron=_Smelt iron
smelt_gold=_Smelt gold
work=_Work

[smelt_iron]
return=skipped unless economy needs iron
consume=coal ironore
sleep=32000
animate=working 35000
produce=iron

[smelt_gold]
return=skipped unless economy needs gold
consume=coal goldstone
sleep=32000
animate=working 35000
produce=gold

[work]
call=smelt_iron
call=smelt_gold
call=smelt_iron
return=skipped

[idle]
packed=true
pics=smelting_works.png
dimensions=100 82
base_offset=0 0
hotspot=44 58

[working]
