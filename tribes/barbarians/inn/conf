[global]
size=medium
buildable=no
enhanced_building=yes
enhancement=big_inn
output=ration
output=snack

[buildcost]
trunk=2
grout=2
thatchreed=1

[working positions]
innkeeper=1

[inputs]
fish=4
pittabread=4
meat=4
beer=4

[programs]
produce_ration=_Produce ration
produce_snack=_Produce snack
work=_Work

[produce_ration]
return=skipped unless economy needs ration
consume=fish,pittabread,meat
sleep=14000
animate=working 19000
produce=ration

[produce_snack]
return=skipped unless economy needs snack
consume=pittabread fish,meat beer
sleep=15000
animate=working 20000
produce=snack

[work]
call=produce_ration
call=produce_snack
return=skipped

[idle]
packed=true
pics=inn.png
dimensions=100 87
base_offset=0 0
hotspot=48 59

[working]
packed=true
pics=inn.png
dimensions=100 87
base_offset=0 0
hotspot=48 59

