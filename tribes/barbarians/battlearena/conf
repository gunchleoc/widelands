[soldier evade]
min_level=0
max_level=1

[programs]
sleep=_Sleep
upgrade_soldier_evade_0=_Upgrade soldier evade 0
upgrade_evade_0=_Upgrade soldier evade 0 (only for compatibility with old savegames (build13))
upgrade_soldier_evade_1=_Upgrade soldier evade 1
