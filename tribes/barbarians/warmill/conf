[global]
soundfx=../../../sound/smiths/smith
soundfx=../../../sound/smiths/sharpening
size=medium
buildable=yes
output=axe
output=sharpaxe
output=broadaxe
output=bronzeaxe
output=battleaxe
output=warriorsaxe
