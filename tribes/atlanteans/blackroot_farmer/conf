[global]
help=_Plants and harvests blackroot.
program=plant
program=harvest

[buildcost]
carrier=1
shovel=1

[plant]
0=findspace size:any radius:2
1=walk coords
2=animation planting 4000
3=plant tribe:blackrootfield_t
4=animation planting 4000
5=return

[harvest]
0=findobject attrib:blackrootfield radius:2
1=walk object
2=animation harvesting 10000
3=object harvest
4=animation gathering 2000
5=createitem blackroot
6=return

[idle]
pics=idle_??.png
hotspot=9 24

[walk]
dirpics=walk_!!_??.png
hotspot=13 24
fps=10

[walkload]
dirpics=walk_!!_??.png
hotspot=13 24
fps=10

[planting]
pics=plant_??.png
hotspot=13 32
fps=10

[harvesting]
