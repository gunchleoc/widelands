[produce_bakingtray]
return=skipped unless economy needs bakingtray
consume=iron trunk
sleep=32000
animate=working 35000
produce=bakingtray

[produce_bucket]
return=skipped unless economy needs bucket
consume=iron trunk
sleep=32000
animate=working 35000
produce=bucket

