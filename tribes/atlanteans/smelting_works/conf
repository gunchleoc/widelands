[global]
size=medium
output=iron
output=gold

[buildcost]
trunk=1
stone=4
planks=1
spidercloth=1

[aihints]
build_material=false

[working positions]
smelter=1

[inputs]
ironore=8
goldore=8
coal=8

[programs]
smelt_iron=_Smelt iron
smelt_gold=_Smelt gold
work=_Work

[smelt_iron]
return=skipped unless economy needs iron
consume=ironore coal
sleep=25000
animate=working 35000
produce=iron

[smelt_gold]
return=skipped unless economy needs gold
consume=goldore coal
sleep=25000
animate=working 35000
produce=gold

[work]
call=smelt_iron
call=smelt_gold
call=smelt_iron
return=skipped

[idle]
packed=true
pics=smelting_works.png
dimensions=91 100
