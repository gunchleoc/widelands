[global]
help=_Works at the shipyard and constructs new ships.
soundfx=../../../sound/hammering/hammering
program=buildship

[buildcost]
hammer=1
carrier=1

[buildship]
0=walk object-or-coords
1=plant tribe:shipconstruction unless object
2=playFX ../../../sound/sawmill/sawmill 230
3=animation idle 500
4=construct
5=animation idle 5000
6=return

[idle]
pics=idle_??.png
sfx=0 ../../../sound/hammering/hammering
hotspot=12 28
fps=10

[walk]
dirpics=walk_!!_??.png
hotspot=12 28
fps=10

[walkload]
dirpics=walkload_!!_??.png
hotspot=12 28
fps=10
