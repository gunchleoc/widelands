[global]
help=_Cuts raw pieces of granite and marble out of laying stones.
program=cut_stone
program=cut_marble
soundfx=../../../sound/stonecutting/stonecutter

[buildcost]
pick=1
carrier=1

[cut_stone]
0=findobject attrib:stone radius:6
1=walk object
2=playFX ../../../sound/stonecutting/stonecutter 220
3=animation hacking 10000
4=object shrink
5=createitem stone
6=return

[cut_marble]
0=findobject attrib:stone radius:6
1=walk object
2=playFX ../../../sound/stonecutting/stonecutter 220
3=animation hacking 10000
4=object shrink
5=createitem marble
6=return

[idle]
pics=idle_??.png
hotspot=9 23
fps=10

[hacking]
pics=hacking_??.png
hotspot=8 23
fps=10

[walk]
dirpics=walk_!!_??.png
hotspot=9 22
fps=10

[walkload]
dirpics=walkload_!!_??.png
hotspot=8 25
fps=10
