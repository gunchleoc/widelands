[global]
size=small
output=stone
output=marble

[buildcost]
trunk=2
wood=1

[working positions]
stonemason=1

[aihints]
is_basic=true
stoneproducer=true

[programs]
mine_stone=_Mine stone
stone=_Mine stone (only for compatibility with old savegames (build13))
mine_marble=_Mine marble
marble=_Mine marble (only for compatibility with old savegames (build13))
work=_Work

[mine_stone]
sleep=25000
worker=cut_stone

[stone]
sleep=25000
worker=cut_stone

[mine_marble]
sleep=25000
worker=cut_marble

[marble]
sleep=25000
worker=cut_marble

[work]
call=mine_stone
call=mine_stone
call=mine_stone
call=mine_marble # 2 of 7 times it finds marble
call=mine_stone
call=mine_stone
call=mine_marble # 2 of 7 times it finds marble
return=skipped

[idle]
pics=quarry_i_??.png  # ???
hotspot=42 57
