[inputs]
ironore=8
goldstone=8
coal=8

[programs]
smelt_iron=_Smelt iron
smelt_gold=_Smelt gold
work=_Work

[smelt_iron]
return=skipped unless economy needs iron
consume=ironore coal
sleep=25000
animate=working 35000
produce=iron

[smelt_gold]
return=skipped unless economy needs gold
consume=goldstone coal
sleep=25000
animate=working 35000
produce=gold

[work]
call=smelt_iron
call=smelt_gold
call=smelt_iron
return=skipped

