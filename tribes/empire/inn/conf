[global]
size=medium
buildable=no
enhanced_building=yes
output=ration
output=meal

[buildcost]
wood=2
marble=2
marblecolumn=1

[working positions]
innkeeper=1

[inputs]
fish=6
bread=6
meat=6

[programs]
produce_ration=_Produce ration
produce_meal=_Produce meal
work=_Work

[produce_ration]
return=skipped unless economy needs ration
consume=bread,fish,meat
sleep=14000
animate=working 19000
produce=ration

[produce_meal]
return=skipped unless economy needs meal
consume=bread fish,meat
sleep=15000
animate=working 20000
produce=meal

[work]
call=produce_ration
call=produce_meal
return=skipped

[idle]
pics=inn_i_??.png  # ???
hotspot=52 75

[working]
pics=inn_i_??.png  # ???
hotspot=52 75
